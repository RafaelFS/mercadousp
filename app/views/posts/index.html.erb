<h1>Classificados</h1>
 <%= link_to 'Novo anúncio', new_post_path %>
<table>
  <tr>
    <th>Título</th>
    <th>Texto</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Mostrar', post_path(post) %></td>
      <td><%= link_to 'Editar', edit_post_path(post) %></td>
      <td><%= link_to 'Deletar', post_path(post),
                    method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
    </tr>
  <% end %>
</table>